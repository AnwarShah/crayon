        [ "Visual", darkgray, gray, "NONE" ],
        [ "VisualNOS", "NONE", darkred, "NONE" ],
        [ "Pmenu", darkgray, gray, "NONE" ],
        [ "PmenuSbar", darkcyan, white, "NONE" ],
        [ "PmenuSel", "NONE", gray, "NONE" ],
        [ "PmenuThumb", gray, gray, "NONE" ],
        [ "FoldColumn", "NONE", gray, "NONE" ],
        [ "Folded", "NONE", darkgray, "NONE" ],
        [ "WildMenu", green, black, "NONE" ],
        [ "SpecialKey", "NONE", darkgray, "NONE" ],
        [ "DiffAdd", "NONE", green, "NONE" ],
        [ "DiffChange", "NONE", darkgray, "NONE" ],
        [ "DiffDelete", "NONE", red, "bold" ],
        [ "DiffText", "NONE", blue, "bold" ],
