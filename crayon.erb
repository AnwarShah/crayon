        [ "Structure", "NONE", magenta, "NONE" ],
        [ "CursorColumn", darkgray, white, "NONE" ],
		[ "EndOfBuffer", "NONE", black, "NONE"],

		# Filetype Specific

		# HTML
		[ "htmlLink", "NONE", gray, "underline" ],

		# CSS/SCSS
		[ "cssMultiColumnAttr", "NONE", green, "NONE" ],
		[ "cssFontAttr", "cssMultiColumnAttr" ],
		[ "cssFlexibleBoxAttr", "cssMultiColumnAttr" ],
		[ "cssBraces", "NONE", gray, "NONE" ],
