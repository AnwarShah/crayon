    black       = ["#080808", 0, "black"]
    darkred     = ["#401f1f", 1, "darkred"]
    darkgreen   = ["#3b4a35", 2, "darkgreen"]
    darkyellow  = ["#4d3c2e", 3, "darkyellow"]
    darkblue    = ["#2d4963", 4, "darkblue"]
    darkmagenta = ["#564059", 5, "darkmagenta"]
    darkcyan    = ["#2e3c40", 6, "darkcyan"]
